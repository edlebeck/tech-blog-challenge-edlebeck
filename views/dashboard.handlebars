<section>
    <button type="submit" id="create-new-post"> Create new post</button>
</section>


{{#if posts.length}}
<section>
    <h2>Your Dashboard</h2>
    <ul>
        {{#each posts as |post|}}
        <li>
            {{> post-details post}}
            <a href="/dashboard/edit/{{post.id}}">Edit</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/js/create-post.js"></script>