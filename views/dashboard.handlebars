<section class="container mt-3">
    <button type="submit" id="create-new-post" class="btn btn-dark"> Create new post</button>
</section>


{{#if posts.length}}
<section class="container">
    <h2>Your Dashboard</h2>
    {{#each posts as |post|}}
    <div class="container">
        {{> post-details post}}
        <a href="/dashboard/edit/{{post.id}}" class="link-dark p-1 m-2"><h5>Edit</h3></a>
    </div>
    {{/each}}
</section>
{{/if}}

<script src="/js/create-post.js"></script>